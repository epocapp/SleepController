<Window x:Class="SleepController.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox Name="LogText" Grid.Row="0" IsReadOnly="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" FontFamily="Consolas" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="4">
            <Button Name="RefreshBtn" Content="Refresh" Width="80" Margin="4" Click="RefreshBtn_Click" />
            <Button Name="ClearBtn" Content="Clear" Width="80" Margin="4" Click="ClearBtn_Click" />
            <Button Name="CloseBtn" Content="Close" Width="80" Margin="4" Click="CloseBtn_Click" />
        </StackPanel>
    </Grid>
</Window>
